<views:BasePage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Maui.Controls.Sample.Pages.ButtonPage"
    xmlns:views="clr-namespace:Maui.Controls.Sample.Pages.Base"
    Title="Button">
    <views:BasePage.Content>
        <VerticalStackLayout
            Margin="12">
            <Button ContentLayout="Top, 10" TextColor="White" Background="Black" ImageSource="settings" Text="settings" Padding="16, 9, 16, 9" />
            <Button ContentLayout="Bottom, 10" TextColor="White" Background="Black" ImageSource="settings" Text="settings" Padding="16, 9, 16, 9" />
            <Button ContentLayout="Left, 10" HeightRequest="200" TextColor="White" Background="Black" ImageSource="settings" Text="settings" Padding="16, 9, 16, 9" />
            <Button ContentLayout="Right, 10" HeightRequest="200" TextColor="White" Background="Black" ImageSource="settings" Text="settings" Padding="16, 9, 16, 9" />
            <Label
                Text="Default"
                Style="{StaticResource Headline}"/>
            <Button
                Text="Button"/>
            <Label
                Text="Disabled"
                Style="{StaticResource Headline}"/>
            <Button
                IsEnabled="False"
                Text="Button"/>
            <Label
                Text="BackgroundColor"
                Style="{StaticResource Headline}"/>
            <Button
                BackgroundColor="Blue"
                Text="Button"/>
            <Label
                Text="TextColor"
                Style="{StaticResource Headline}"/>
            <Button
                BackgroundColor="Red"
                TextColor="White"
                Text="Button"/>
        </VerticalStackLayout>
    </views:BasePage.Content>
</views:BasePage>